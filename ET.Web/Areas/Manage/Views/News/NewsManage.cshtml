@{
    Layout = null;
    Layout = "~/Areas/Manage/Views/Shared/_ManagePartial.cshtml";
}
@section Title{
    博客友情链接
}
@section Header{
<script src="/Scripts/Blog/editor.js"></script>
}
<div class="ManageBody">
    <div class="ManageOperateTitle">
       信息管理
    </div>
    <div class="ManageOperate">
        <form id="form1"  action="/" method="post">
            <table class="datatable">
               
                <tr>
                    <th>
                        信息标题：
                    </th>
                    <td>
                        <input name="NewTitle" type="text" class="easyui-textbox" style="width: 200px" data-options="required:true" />
                    </td>
                </tr>
                <tr>
                    <th>
                        信息来源：
                    </th>
                    <td>
                        <input name="NewSource" type="text" class="easyui-textbox" style="width: 200px" data-options="required:true" />
                    </td>
                </tr>
                <tr>
                    <th>
                        内容：
                    </th>
                    <td>
                        <input name="NewContent" type="text" class="easyui-textbox" style="width: 200px" data-options="required:true" />
                    </td>
                </tr>
                <tr>
                    <th>
                        状态操作：
                    </th>
                    <td>
                        是否启用<input name="Status" type="checkbox" id="ickStatus" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

<script type="text/javascript">
    var _id = '@Request["infoid"]';
    $(function () {
        //启用快捷键 83/ALT+s保存
        $(window).ApplyQuickKey(83, BtnSaveOrUpdate);
        //启用快捷键 83/ALT+c关闭
        $(window).ApplyQuickKey(67, parent.windowClose);
        $('#ArticleContent').editor({ tools: 'full' });
        if (_id != "") {
            $.ajax({
                type: "get", dataType: "json",
                url: "/news/AjaxGetNewDetail",
                async: true,
                data: { infoid: _id },
                success: function (data) {
                    $("#form1").form("reset");
                    $("#form1").form("load", data);
                    if (data.Status == 1)
                        $('#ickStatus').attr("checked", true);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    TopNotify(errorThrown, 'error');
                }
            });
        }
    });
    function BtnSaveOrUpdate() {
        if ($("#form1").form("validate")) {
            $.ajax({
                cache: true,
                type: "POST",
                url: '/news/AjaxSaveNew?infoid=' + _id,
                data: $('#form1').serialize(),
                async: false,
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    parent.TopNotify(errorThrown, 'error');
                },
                success: function (data) {
                    if (data == "true") {
                        parent.TopNotify("保存成功", 'info');
                        parent.windowClose();
                    }
                }
            });
        }
    }
</script>