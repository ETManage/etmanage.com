@{
    Layout = null;
    Layout = "~/Areas/Manage/Views/Shared/_ManagePartial.cshtml";
}
@section Title{
    @ViewBag.PageTitle-管理中心
}
@section Styles{
    <link href="/content/manage/default.css" rel="stylesheet" type="text/css" />
}
@section Header{
    <script src="/scripts/manage/default.js" type="text/javascript"></script>
}
<div class="easyui-layout" scroll="no" id="layoutMain" fit="true">
    <noscript>
        <div class="JsTip">
            <img src="/images/manage/noscript.gif" alt='抱歉，请开启脚本支持！' />
        </div>
    </noscript>
    <div region="north"  class="header" border="false">
        <div class="logo fLeft">
            <img alt="" src="/Images/Manage/logo.png" width="30" height="30" align="absmiddle" />企业信息化平台
        </div>
        <div id="Headermenu">
            <ul id="topnav">
                <li id="metnav_1" class="list">
                    <a id="nav_1" href="/">
                        <span class="c1"></span>
                        系统首页
                    </a>
                </li>
                <li id="metnav_3" class="list droppopup">
                    <a id="nav_3" class="" href="http://et.etmanage.com/">
                        <span class="c3"></span>帮助中心
                    </a>
                </li>
                @*<li id="metnav_2" class="list" onclick="SkinIndex()">
                    <a id="nav_2">
                        <span class="c2"></span>切换皮肤
                    </a>
                </li>*@
                <li id="metnav_5" class="list">
                    <a id="nav_5" href="./UserInfo">
                        <span class="c5"></span>个人中心
                    </a>
                </li>
                <li id="metnav_4" class="list" onclick="IndexOut();">
                    <a id="nav_4">
                        <span class="c4"></span>
                        安全退出
                    </a>
                </li>
            </ul>
        </div>

    </div>

    <div region="west" hide="true" title="导航菜单" class="navigation">
        <div id="wnav" class="easyui-accordion" fit="true" border="false">
            <!--  导航内容 -->
        </div>
    </div>
    <div id="mainPanel" region="center">
        <div id="tabs" class="easyui-tabs" border="false" fit="true">
            <div title="管理首页" class="tabsMain">
                欢迎使用<br />
                
            </div>
        </div>
    </div>

    <div region="south" split="false" class="footer" border="false">
        <div class="number" style="width: 30%; text-align: left; float: left; line-height: 25px;">
            &nbsp;技术支持：@ViewBag.CompanyName -@ViewBag.PageVer
        </div>
        <div class="number" style="width: 40%; text-align: center; float: left; line-height: 25px;">
            CopyRight © 2015 - 2016 By ET
        </div>
        <div style="width: 30%; text-align: right; float: right;">
            <div style="padding-right: 0px;">
                <div title="在线用户（@ViewBag.OnlineUserCount）人" class="bottom_icon" style="padding-top:2px;">
                    <img src="/Content/Manage/img/bottom_icon_usergroup.png" class="fLeft"><div class="fLeft" style="line-height: 25px;color:white">@ViewBag.OnlineUserCount</div>
                </div>
                @*<div id="div_icon_message" title="即时消息" class="bottom_icon" style="padding-top: 2px;">
                    <img id="icon_message" src="/Content/Manage/img/bottom_icon_message.png" class="fLeft"><div class="fLeft" style="line-height: 25px;color:white">1</div>
                </div>
                <div title="系统消息" class="bottom_icon" style="padding-top:2px;">
                    <img src="/Content/Manage/img/bottom_icon_flag.png" class="fLeft"><div class="fLeft" style="line-height: 25px;color:white">@ViewBag.OnlineUserCount</div>
                </div>*@
                <div id="div_icon_curruser" class="bottom_icon" style="padding-top: 1px;">
                    <img title="我的信息，账户：@ViewBag.CurrentUserInfo.UserName（@ViewBag.CurrentUserInfo.CNName）" src="/Content/Manage/img/bottom_icon_userinfo.png" class="fLeft"><div class="fLeft" style="line-height: 25px;color:white">@ViewBag.CurrentUserInfo.UserName（@ViewBag.CurrentUserInfo.CNName）</div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <!--选项卡右键菜单-->
    <div id="TabMenuStrip" class="easyui-menu">
        <div id="menu-tabupdate">
            刷新
        </div>
        <div class="menu-sep">
        </div>
        <div id="menu-tabclose">
            关闭
        </div>
        <div id="menu-tabcloseall">
            全部关闭
        </div>
        <div id="menu-tabcloseother">
            除此之外全部关闭
        </div>
        <div class="menu-sep">
        </div>
        <div id="menu-tabcloseright">
            当前页右侧全部关闭
        </div>
        <div id="menu-tabcloseleft">
            当前页左侧全部关闭
        </div>
        <div class="menu-sep">
        </div>
        <div id="mm-exit">
            退出
        </div>
    </div>

</div>


<script>
    var currDate = new Date();
    $(".navigation").attr("title", currDate.getFullYear() + "年" + (currDate.getMonth() + 1) + "月" + currDate.getDate() + "日")
    $(function () {
      
        $('#div_icon_curruser').tooltip({
            position: 'top',
            content: '<div style="padding:5px;"><img src="@ViewBag.CurrentUserInfo.Photo" onerror="this.src=\'/Images/Public/userdefault.png\'" ><p><b>@ViewBag.CurrentUserInfo.CNName</b></p></div>',
            onShow: function () {
                $(this).tooltip('tip').css({
                    boxShadow: '1px 1px 3px #292929'
                });
            },
            onPosition: function () {
                $(this).tooltip('tip').css('left', $(this).offset().left);
                $(this).tooltip('arrow').css('left', 20);
            }
        });
    });
</script>
