@{
    Layout = null;
    Layout = "~/Areas/Manage/Views/Shared/_ManagePartial.cshtml";
}
@section Title{
    友情链接列表
}
@section Styles{
    <link href="/res/autocomplete/autocomplete.css" rel="stylesheet" type="text/css" />
}
@section Header{
    <script src="/Res/autocomplete/jquery.autocomplete.js" type="text/javascript"></script>
}
<div class="ManageBody">
    <fieldset class="ManageSearch">
        <legend>查询条件</legend>
        <table>
            <tr>
                <td>
                    <label class="control-label" style="margin-left:10px;">链接名称：</label>
                    <input id="txtSearch" class="form-control" style="width: 175px" type="text" placeholder="输入关键字进行搜索" />

                </td>
                <td>
                    <button id="btnSearch" class='btn btn-default'>
                        查询
                    </button>
                </td>
            </tr>
        </table>
    </fieldset>
    <div class="ManageList">
        <table id="InfoGridData"></table>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnSearch").click(queryClick);

        //操作按钮，此处需要添加操作权限控制
        var toolbarnode = [
            {
                text: '添加',
                iconCls: 'icon-add',
                handler: fixAdd
            }, '-', {
                text: '查看',
                iconCls: 'icon-view',
                handler: fixView
            }, '-', {
                text: '修改',
                iconCls: 'icon-edit',
                handler: fixEdit
            }, '-', {
                text: '删除',
                iconCls: 'icon-remove',
                handler: fixDel
            }, '-'
        ]
        $('#InfoGridData').datagrid({
            width: $(document).width() - 10,
            height: 380,
            fitColumns: false,
            striped: true,
            nowrap: false,
            showFooter: true,
            url: "./ajaxqueryrollpagelist", method: 'get',
            collapsible: false,
            remoteSort: false,
            showFooter: true,
            singleSelect: true,
            pagination: true,
            rownumbers: true,
            pageSize: 10,
            columns: [[
                    { field: 'RollID', width: 10, title: 'ID', sortable: true, hidden: true },
                    { field: 'RollName', width: 220, title: '链接名称', sortable: true, formatter: formatterUrl },
   
                    { field: 'RollSort', width: 220, title: '链接排序', sortable: true }
            ]],
            toolbar: toolbarnode

        });
        var options = { serviceUrl: './ajaxsearchroll' };
        searchobj = $('#txtSearch').autocomplete(options);
    });
    function formatterUrl(val, row, index) {
        return '<a href="' + row.ArticleUrl + '" target="_blank" >' + row.RollName + '</a>'
    }
    function fixAdd() {
        openWindow('新增', "./rollmanage", { width: 600, height: 450 })
    };

    function fixDel() {
        var selected = $('#InfoGridData').datagrid('getChecked');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        $.messager.confirm("确认提示框", "确认删除这 " + selected.length + " 条吗？", function (r) {
            if (r) {
                var ls = $.map(selected, function (a) { return "'"+a.RollID+"'"; }).toString();
                $.post('./AjaxDeleteRoll', { infoid: ls }, function (res) {
                    if (res == "true") {
                        $("#InfoGridData").datagrid('reload')
                        TopNotify("数据已删除", 'info');
                    }
                    else {
                        TopNotify(res, 'error');
                    }
                });
            }
        });
    };

    function fixEdit() {
        var selected = $('#InfoGridData').datagrid('getSelected');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        openWindow('修改', "./rollmanage?infoid=" + selected.RollID, { width: 600, height: 450 })
    };

    function fixView() {
        var selected = $('#InfoGridData').datagrid('getSelected');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        openSimpleWindow('查看', "./rollmanage?infoid=" + selected.RollID, { width: 600, height: 450 })
    };

    function queryClick() {
        $("#InfoGridData").datagrid('load', getQueryParam());
    };

    function getQueryParam() {
        var query = { name: $("#txtSearch").val() };
        return query;
    };
</script>

