@{
    Layout = null;
    Layout = "~/Areas/Manage/Views/Shared/_ManagePartial.cshtml";
}
@section Title{
    类别列表
}
@section Styles{
    <link href="/res/autocomplete/autocomplete.css" rel="stylesheet" type="text/css" />
}
@section Header{
    <script src="/Res/autocomplete/jquery.autocomplete.js" type="text/javascript"></script>
}
<div class="ManageBody">
    <div class="ManageListTitle"></div>
    <fieldset class="ManageSearch" style="">
        <legend>信息查询</legend>
        <table class="datatable">
            <tr>
                <th style="width:80px;">
                    类别名称：
                </th>
                <td>
                    <input id="txtSearch" style="width: 175px" type="text" data-options="prompt:'请输入查询内容'"
                           class="search input" />

                    <a href='javascript:queryClick()' class='easyui-linkbutton' data-options='iconCls:"icon-search"'>
                        查询
                    </a>
                </td>
            </tr>
        </table>
    </fieldset>
    <div class="ManageList">
        <table id="InfoGridData"></table>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#ManageMain").css("width", $(document).width() - 10)


        //操作按钮，此处需要添加操作权限控制
        var toolbarnode = [
            {
                text: '添加',
                iconCls: 'icon-add',
                handler: fixAdd
            }, '-', {
                text: '查看',
                iconCls: 'icon-view',
                handler: fixView
            }, '-', {
                text: '修改',
                iconCls: 'icon-edit',
                handler: fixEdit
            }, '-', {
                text: '删除',
                iconCls: 'icon-remove',
                handler: fixDel
            }, '-'
        ]
        $('#InfoGridData').datagrid({
            width: $(document).width() - 10,
            height: 380,
            fitColumns: false,
            striped: true,
            nowrap: false,
            showFooter: true,
            url: "/mDesign/AjaxQueryTypePageList", method: 'get',
            collapsible: false,
            remoteSort: false,
            showFooter: true,
            singleSelect: true,
            pagination: true,
            rownumbers: true,
            pageSize: 10,
            columns: [[
                    { field: 'TypeID', width: 10, title: 'ID', sortable: true, hidden: true },
                    { field: 'TypeName', width: 220, title: '类别名称', sortable: true },
                    { field: 'TypeSort', width: 220, title: '类别排序', sortable: true }
            ]],
            toolbar: toolbarnode

        });
        var options = { serviceUrl: '/mDesign/AjaxSearchType' };
        searchobj = $('#txtSearch').autocomplete(options);
    });

    function fixAdd() {
        openWindow('新增', "TypeManage", { width: 600, height: 450 })
    };

    function fixDel() {
        var selected = $('#InfoGridData').datagrid('getChecked');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        $.messager.confirm("确认提示框", "确认删除这 " + selected.length + " 条吗？", function (r) {
            if (r) {
                var ls = $.map(selected, function (a) { return "'"+a.TypeID+"'"; }).toString();
                $.post('/Design/AjaxDeleteModule', { infoid: ls }, function (res) {
                    if (res == "true") {
                        $("#InfoGridData").datagrid('reload')
                        TopNotify("数据已删除", 'info');
                    }
                    else {
                        TopNotify(res, 'error');
                    }
                });
            }
        });
    };

    function fixEdit() {
        var selected = $('#InfoGridData').datagrid('getSelected');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        openWindow('修改', "TypeManage?infoid=" + selected.TypeID, { width: 600, height: 450 })
    };

    function fixView() {
        var selected = $('#InfoGridData').datagrid('getSelected');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        openSimpleWindow('查看', "TypeManage?infoid=" + selected.TypeID, { width: 600, height: 450 })
    };

    function queryClick() {
        $("#InfoGridData").datagrid('load', getQueryParam());
    };

    function getQueryParam() {
        var query = { name: $("#txtSearch").val() };
        return query;
    };
</script>

