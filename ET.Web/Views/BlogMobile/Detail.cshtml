@model ET.Sys_DEF.BlogArticleInfo
@{
    Layout = "~/Views/Shared/_LayoutBlogMobile.cshtml";
}
@section Title{
    @Model.ArticleTitle
}
@section Header{
    <script>
        window.YYService = { connect: function () { } }
        window.YYToken = { timestamp: "1435729175", token: "e9e5d732e197ef752462479400a56f1b" };
