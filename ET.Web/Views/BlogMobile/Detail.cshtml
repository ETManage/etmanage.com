    </script>
}
<div id="header" class="head">
    <div class="wrap">
        <i class="menu_back"><a href="/blogmobile/index"></a></i>
        <div class="title">
            <span class="title_d"><p>@Model.ArticleTitle</p></span>
            <div class="clear"></div>
        </div>
        <i class="menu_share"></i>
    </div>
</div>

<div id="container">
    <div id="content">
        <div class="content_header">
            <div class="pd10">
                <div class="fl author"><a href="#"><img src="@Model.ArticleCover.Split(',')[0] " onerror="this.src = '/images/public/nopicture.jpg'" /></a></div>
                <div class="header_info">
                    <div class="header_more fl">
                        <h4>@Model.ArticleSource</h4>
                        <dl>
                            <dt></dt>
                            <dd>@ViewBag.ArticleType.TypeName</dd>
                            <div class="clear"></div>
                        </dl>
                        <div class="clear"></div>
                    </div>
                    <div data-uid="12" class="fr"></div>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>

        <div id="works">
            <div class="pd5">

                <div class="list_info_i" style="margin-top:5px;">
                    <dl class="list_info_views">
                        <dt></dt>
                        <dd>@Model.AccessCount</dd>
                        <div class="clear"></div>
                    </dl>
                    <dl class="list_info_comment">
                        <dt></dt>
                        <dd>@ViewBag.listArticleCommentCount</dd>
                        <div class="clear"></div>
                    </dl>
                    <dl class="list_info_like">
                        <dt></dt>
                        <dd>@Model.LoveCount</dd>
                        <div class="clear"></div>
                    </dl>
                    <dl class="works_view">
                        <dt></dt>
                        <dd>
                            <span class="time timeago" title="@Model.CreateTime">
                                @Model.CreateTime.Value.ToString("yy-MM-dd")
                            </span>
                        </dd>
                        <div class="clear"></div>
                    </dl>
                    <div class="clear"></div>
                </div>
                @if (!string.IsNullOrEmpty(Model.ArticleCover))
                {
                    <div class="works">
                        <a href="javascript:;" target="_blank"><img vsrc="@Model.ArticleCover.Split(',')[0]" onerror="this.src = '/images/public/nopicture.jpg'" border="0" /></a>
                    </div>
                }
                <div class="works_info">
                    <div class="pd10">
                        @Html.Raw(Model.ArticleContent)
                    </div>
                    <div class="clear"></div>

                </div>
            </div>
            <div id="more_about">
                <h4>相关文章</h4>
                <div class="more_about">
                    <table width="100%" border="0" cellspacing="5">
                        <tr>
                            @foreach (ET.Sys_DEF.BlogArticleInfo itemArticle in ViewBag.listOtherArticle)
                            {
                                <td><a target="_blank" href="detail/@itemArticle.ArticleID" title="@itemArticle.ArticleTitle"><img onerror="this.src = '/images/public/nopicture.jpg'" src="@itemArticle.ArticleCover.Split(',')[0]" alt="@itemArticle.ArticleTitle" /></a></td>
                            }
                        </tr>
                    </table>
                </div>
            </div>
            <div id="comment">
                <div class="comment_other">
                    <h4>全部评论: @ViewBag.listArticleCommentCount条</h4>
                </div>
                <ul>
                    @Html.Raw(ViewBag.listArticleComment);
                </ul>
                <div class="pd5">
                    <a class="more_comment" href="javascript:;" onclick="return false;">更多</a>
                </div>
            </div>
        </div>
    </div>



    <div id="us_panel_menu">
        <div class="us_panel_msk"></div>
        <div class="us_panel_menu_t">
            <table width="100%" cellspacing="0">
                <tr>
                    <td class="us_panel_menu_index">
                        <a href="index"><i></i><span>首页</span></a>
                    </td>
                    <td class="us_panel_menu_designer">
                        <a href="index"><i></i><span>资讯中心</span></a>
                    </td>
                    <td class="us_panel_menu_help">
                        <a href="designindex"><i></i><span>创意设计</span></a>
                    </td>
                    <td class="us_panel_menu_about">
                        <a href="http://et.etmanage.com"><i></i><span>关于</span></a>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div id="us_panel2">
        <table width="100%" height="100%" cellspacing="0" border="0">
            <tr>
                <td class="us_panel_like"><i></i><span>喜欢(<em>@Model.LoveCount</em>)</span></td>
                <td class="us_panel_menu"><div class="arrow_top"></div><i></i><div class="us_panel_menu_left"></div><div class="us_panel_menu_right"></div></td>
                <td class="us_panel_post"><i></i><span>评论(<em>@ViewBag.listArticleCommentCount</em>)</span></td>
            </tr>
        </table>
    </div>

    <div id="add_newpost">
        <div class="add_newpost">
            <table width="100%" height="100%" cellspacing="5">
                <tr>
                    <td class="add_newpost_cancel">取消</td>
                    <td class="add_newpost_post">评论</td>
                </tr>
            </table>
        </div>
        <div class="newpost_w">
            <div class="pd10">
               
                <div class="newpost_w_t">
                    <input type="text" placeholder="用户昵称" />
                    <textarea></textarea>
                </div>
            </div>
        </div>
    </div>


    <div id="add_favorite">
        <div class="hd">
            <div class="wrap">
                <div class="fl">
                    <span>喜欢的分类</span>
                </div>
                <div class="fr"></div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="ct">
            <div class="wrap">
                <div class="created_cate">
                    <div class="created_cate_add">添加</div>
                    <div class="created_cate_ipt">
                        <input type="text" placeholder="创建分类" />
                    </div>
                    <div class="clear"></div>
                </div>
                <ul id="add_favorites_choose"></ul>
            </div>
        </div>
    </div>


    <div id="share">
        <div class="share_msk"></div>
        <div class="share">
            <div class="pd10">
                <div class="cancel_share"><a href="javascript:AddFavorite();">收藏本文</a></div>
            </div>
        </div>
    </div>
    

