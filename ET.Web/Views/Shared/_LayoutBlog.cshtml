<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="弈泰资讯,弈泰网络,弈泰科技,ET,弈泰工作室,IT资讯,科技资讯,网站建设,管理平台,门户建设,创意设计">
    <meta name="description" content="专业的IT资讯信息分享平台。您可以搜索IT行业事件、热点话题、人物动态、产品资讯等，快速了解它们的最新进展。">
    <meta name="author" content="弈泰网络">
    <link rel="icon" href="/favicon.ico">
    <title>弈泰网络-@RenderSection("Title", required: false)</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta property="qc:admins" content="6710324165161756375" />
    @Styles.Render("~/content/basestyle")
    <script src="~/Scripts/JQuery/jquery-2.1.1.min.js"></script>
    <script src="/Scripts/common/jquery.topbar.js"></script>
    <link href="@Url.Content("~/content/blog/blog.css")" rel="stylesheet" />
    <link href="@Url.Content("~/content/blog/toolbar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/content/blog/iconfont.css")" rel="stylesheet" />
    <script src="@Url.Content("~/scripts/blog/effects.js")" type="text/javascript"></script>
    <link href="/Res/autocomplete/autocomplete.css" rel="stylesheet" />
    <script src="/Res/autocomplete/jquery.autocomplete.js" type="text/javascript"></script>
    <script src="/Scripts/common/common.js"></script>
    <script src="/Scripts/lib/timeago.js"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"  type="text/javascript"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"  type="text/javascript"></script>
    <![endif]-->
    @RenderSection("Header", required: false)
</head>
<body>

    <p id="back-to-top" class="block"><a href="#top"><span></span></a></p>
    <div class="head headscroll">
        <div class="head-con">
            <p><a href="@PublicHelper.GetHostAddress()/" class="logo"></a></p>
            <div class="nav-mo clearfix">
                @{Html.RenderAction("_PartialNav", "Shared");}
            </div>
            <div class="search" id="header_search">

                <label>
                    <em>搜索信息</em>
                    <input name="srchtxt" type="text" id="txtSearch" class="seatext" autocomplete="off" maxlength="100" value="" speech="" x-webkit-speech>
                </label>
                <input type="button" value="" class="seabutton" id="btnSearch">
                <div class="about-ser">

                </div>
            </div>
            @*@Html.Raw(ViewBag.htmlLoginOk)
                <div class="user-ed" id="nologin">
                    <a href="@PublicHelper.GetHostAddress()/login?t=0&l=@Request.Url.ToString()" rel="nofollow">免费注册</a><span class="ml10 mr10">|</span><a href="@PublicHelper.GetHostAddress()/login?l=@Request.Url.ToString()" rel="nofollow">登录</a><br>
                    <span id="ibtnQQLogin"></span>
                    <a id="ibtnSINALogin" href="javascript:;" rel="nofollow">新浪登录</a>
                </div>*@
            @{Html.RenderAction("_PartialLoginStatus", "Shared");}
        </div>

    </div>
    <div class=" clear"></div>
    <div class="et-main clear">
        <div class="main-container">
            <div class="speedbar">
                @{Html.RenderAction("_PartialNotice", "Shared");}
            </div>

            @RenderBody()
        </div>
    </div>
    @RenderSection("BodyExtend", required: false)

    @{Html.RenderAction("_PartialBlogFooter", "Shared");}
    @if (this.User.Identity.IsAuthenticated)
    {
        Html.RenderAction("_PartialToolbar", "Shared");
    }
    <script type="text/javascript" src="http://qzonestyle.gtimg.cn/qzone/openapi/qc_loader.js" data-appid="101213317" charset="utf-8" data-redirecturi="http://etmanage.com/Account/qqlogincallback"></script>

    <script src="@Url.Content("~/scripts/blog/header.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function sendViprequest() {
            $.post("/user/ajaxpostviprequest",
               function (data) {
                   if (data == "true") {
                       alert('申请已发送！请等待管理员审核！');
                       $("#iapplyvip").html("已申请").removeAttr("href");
                   }
                   else
                       alert(data);
               });

        }
    </script>
</body>
</html>
