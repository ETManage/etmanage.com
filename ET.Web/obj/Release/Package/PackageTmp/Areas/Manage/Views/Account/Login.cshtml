@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.PageTitle</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="/favicon.ico" />
    
    @Scripts.Render("~/Scripts/jquery")
    <link href="@Url.Content("~/Res/easyui/themes/default/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Res/easyui/themes/icon.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Res/easyui/jquery-easyui-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Res/easyui/easyui-extend.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Res/easyui/locale/easyui-lang-zh_CN.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/Account/Login.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Account/Login.js")" type="text/javascript"></script>
</head>
<body>
    <div id="mainBody">
        <div id="cloud1" class="cloud">
        </div>
        <div id="cloud2" class="cloud">
        </div>
    </div>
    <div class="logintop">
        <span>欢迎访问 @ViewBag.CompanyName 后台管理界面平台</span>
        <ul>
            <li><a href="/Shop/Index">回首页</a></li>
            <li><a href="#">帮助</a></li>
            <li><a href="#">关于</a></li>
        </ul>
    </div>
    <div class="loginbody">
        <div id="loginmain">
            <div id="loginbox">
                <div id="loginbox2">
                    <table class="Logintable">
                        <tr>
                            <td>
                                <div class="loginspan">
                                    账&nbsp; 户:
                                </div>
                            </td>
                            <td>
                                <input id="txt_UserName" class="txt_UserName" type="text" value="" width="148px" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="loginspan">
                                    密&nbsp; 码:
                                </div>
                            </td>
                            <td>
                                <input id="txt_Password" class="txt_Password" type="password" value="" width="148px" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                        </tr>
                    </table>
                    <div>
                    </div>
                    <div id="btlogin" class="btlogin">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="loginbm">
        @ViewBag.CompanyName 版权所有 @ViewBag.PageVer
    </div>
</body>
</html>
