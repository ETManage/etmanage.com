@{
    Layout = null;
    Layout = "~/Areas/Manage/Views/Shared/_ManagePartial.cshtml";
}
@section Title{
    博客文章列表
}
@section Header{
<link href="@Url.Content("~/Res/autocomplete/autocomplete.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Res/autocomplete/jquery.autocomplete.js")" type="text/javascript"></script>
}
<div id="ManageBody">
    <div id="ManageListTitle"></div>
    <fieldset id="ManageSearch" style=" ">
        <legend>信息查询</legend>
        <table class="datatable">
            <tr>
                <th style="width:80px;">
                    文章标题：
                </th>
                <td>
                    <input id="txtSearch" style="width: 175px" type="text" data-options="prompt:'请输入查询内容'"
                           class="search input" />

                    <a href='javascript:queryClick()' class='easyui-linkbutton' data-options='iconCls:"icon-search"'>
                        查询
                    </a>
                </td>
            </tr>
        </table>
    </fieldset>
    <div id="ManageList">
        <table id="InfoGridData"></table>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var toolbarnode = [
            {
                text: '添加',
                iconCls: 'icon-add',
                handler: fixAdd
            }, '-', {
                text: '查看',
                iconCls: 'icon-view',
                handler: fixView
            }, '-', {
                text: '修改',
                iconCls: 'icon-edit',
                handler: fixEdit
            }, '-', {
                text: '删除',
                iconCls: 'icon-remove',
                handler: fixDel
            }, '-'
        ]
        $('#InfoGridData').datagrid({
            width: $(document).width() - 10,
            height: 380,
            fitColumns: false,
            striped: true,
            nowrap: false,
            showFooter: true,
            url: "/Organization/AjaxQueryUserPageList", method: 'get',
            collapsible: false,
            remoteSort: false,
            showFooter: true,
            singleSelect: true,
            pagination: true,
            rownumbers: true,
            pageSize: 10,
            columns: [[
                    { field: 'UserID', width: 10, title: 'ID', hidden: true },
                    { field: 'CNName', width: 220, title: '姓名', sortable: true },
                     { field: 'Sex', width: 220, title: '性别', sortable: true },
                      { field: 'Age', width: 220, title: '年龄', sortable: true },
                    {
                        field: 'UserCreateTime', width: 220, title: '发布时间', sortable: true,
                        formatter: DateHelper.DateTimeFormatter
                    }
            ]],
            toolbar: toolbarnode

        });
        var options = { serviceUrl: '/Organization/AjaxSearchUser' };
        searchobj = $('#txtSearch').autocomplete(options);
    });

    function fixAdd() {
        openWindow('新增', "UserManage", { width: 800, height: 450 })
    };

    function fixDel() {
        var selected = $('#InfoGridData').datagrid('getChecked');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        $.messager.confirm("确认提示框", "确认删除这 " + selected.length + " 条吗？", function (r) {
            if (r) {
                var ls = $.map(selected, function (a) { return a.UserID; }).toString();
                $.post('/Organization/AjaxDeleteUser', { infoid: ls }, function (res) {
                    if (res == "true") {
                        $("#InfoGridData").datagrid('reload')

                    }
                    else {
                        alert(res);
                    }
                });
            }
        });
    };

    function fixEdit() {
        var selected = $('#InfoGridData').datagrid('getSelected');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        openWindow('修改', "UserManage?infoid=" + selected.UserID, { width: 800, height: 450 })
    };

    function fixView() {
        var selected = $('#InfoGridData').datagrid('getSelected');
        if (null == selected || selected.length < 1) {
            TopNotify("请选择数据", 'info');
            return;
        }
        openSimpleWindow('查看', "UserManage?infoid=" + selected.UserID, { width: 800, height: 450 })
    };

    function queryClick() {
        $("#InfoGridData").datagrid('load', getQueryParam());
    };

    function getQueryParam() {
        var query = { name: $("#txtSearch").val() };
        return query;
    };
</script>