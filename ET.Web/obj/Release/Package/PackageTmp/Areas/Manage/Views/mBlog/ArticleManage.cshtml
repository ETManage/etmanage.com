@{
    Layout = null;
    Layout = "~/Areas/Manage/Views/Shared/_ManagePartial.cshtml";
}
@section Title{
    博客文章列表
}
@section Styles{

}
@section Header{

}
<div style="width: 100%; height: 99%" class="easyui-layout" fit="true">
    <form id="form1" action="/" method="post">
        <div region="west" icon="icon-reload" title="博客文章管理" split="true" style="width: 350px;overflow:auto">
            <table class="datatable">
                <tr>
                    <th class="bg-lightblue">
                        类别：
                    </th>
                    <td>
                        <select name="TypeID" id="sltType_id" class="easyui-combotree" style="width:200px;"
                                data-options="required:true,url:'./AjaxGetTypeSelectData'"></select>
                    </td>
                </tr>
                <tr>
                    <th>
                        标题：
                    </th>
                    <td>
                        <input name="ArticleTitle" type="text" class="easyui-textbox" maxlength="50" data-options="required:true" />
                    </td>
                </tr>
                <tr>
                    <th class="bg-lightblue">
                        链接：
                    </th>
                    <td>
                        <input name="ArticleUrl" type="text" class="easyui-textbox" maxlength="500" />
                    </td>
                </tr>
                <tr>
                    <th>
                        封面：
                    </th>
                    <td>
                        <div id="uploader">
                        </div><span class="cRed">第一张小图(200*100),第二张大图(830*300)</span>
                        <input type="hidden" name="uploadhidden" id="uploadhidden" />
                        <input type="hidden" name="ArticleCover" id="txtArticleCover" />
                    </td>
                </tr>
                <tr>
                    <th>
                        来源：
                    </th>
                    <td>
                        <input name="ArticleSource" type="text" class="easyui-textbox" maxlength="200" />
                    </td>
                </tr>
                <tr>
                    <th>
                        作者：
                    </th>
                    <td>
                        <input name="ArticleAuthor" type="text" class="easyui-textbox" maxlength="200" />
                    </td>
                </tr>
                <tr>
                    <th>
                        操作：
                    </th>
                    <td>
                        启用<input name="Status" type="checkbox" id="ickStatus" checked="checked" />&nbsp;&nbsp;推荐<input name="Recommend" type="checkbox" id="ickRecommend" /><br /> 图片滚动<input name="IsRoll" type="checkbox" id="ickIsRoll" />&nbsp;&nbsp;外部链接<input name="IsOutLink" type="checkbox" id="ickIsOutLink" />
                    </td>
                </tr>
                <tr>
                    <th>
                        标签：
                    </th>
                    <td>
                        <input name="ArticleLabel" type="text" class="easyui-textbox" data-options="required:true" maxlength="200" /><br /><span class="cRed">使用英文符,隔开</span>
                    </td>
                </tr>

                <tr>
                    <th>
                        描述：
                    </th>
                    <td>
                        <textarea name="ArticleDescription" cols="30" rows="10" maxlength="500"></textarea>
                    </td>
                </tr>

                <tr>
                    <th>
                        底部标注：
                    </th>
                    <td>
                        <textarea name="SpecMark" cols="30" rows="10" maxlength="500"></textarea>
                    </td>
                </tr>

            </table>
        </div>
        <div id="divQuery" region="center" style="height: auto; overflow: auto;">

            <table class="datatable">
                <tr>
                    <th>
                        文章内容：
                    </th>
                </tr>
                <tr>
                    <td>
                        <textarea name="ArticleContent" id="ArticleContent" style="height:320px;width:100%;"></textarea>
                    </td>
                </tr>
            </table>

        </div>
    </form>


</div>
<script src="/res/editor/editor.js" type="text/javascript"></script>
<script src="/res/webuploader/webupload.js" type="text/javascript"></script>
<script type="text/javascript">
    var _id = '@Request["infoid"]';
    $(function () {

        //启用快捷键 83/ALT+s保存
        $(window).ApplyQuickKey(83, BtnSaveOrUpdate);
        //启用快捷键 83/ALT+c关闭
        $(window).ApplyQuickKey(67, parent.windowClose);

        ApplicationAjaxUploaderUrl = "BlogUploader";
        ApplicationAjaxEditorUrl = "BlogEditor";

        $("#uploader").powerWebUpload({
            hiddenInputId: "uploadhidden",
            accept: {
                title: 'Images',
                extensions: 'gif,jpg,jpeg,bmp,png',
                mimeTypes: 'image/*'
            },
            fileNumLimit: 2
        });
        $('#ArticleContent').editor({ tools: 'full' });
        if (_id != "") {
            $.ajax({
                type: "get", dataType: "json",
                url: "./ajaxgetarticledetail?rad=" + new Date().toGMTString(),
                async: true,
                data: { infoid: _id },
                success: function (data) {
                    $("#form1").form("reset");
                    $("#form1").form("load", data);
                    if (data.Status == 1)
                        $('#ickStatus').attr("checked", true);
                    if (data.Recommend == 1)
                        $('#ickRecommend').attr("checked", true);
                    if (data.IsRoll == 1)
                        $('#ickIsRoll').attr("checked", true);
                    if (data.IsOutLink == 1)
                        $('#ickIsOutLink').attr("checked", true);


                    $('#ArticleContent').html(data.ArticleContent);
                    if (data.ArticleCover) {
                        var arrpics = data.ArticleCover.split(',');
                        for (var i = 0; i < arrpics.length; i++) {
                            $('#thelist').append('<div  class="item" data-file="' + arrpics[i] + '">' +
                        '<div class="state"> <img src=' + arrpics[i] + '  width="100px" height="80px" /></div>' +
                        '<div class="download" style="display:none;"></div>' +
                        '<div class="del"></div>' +
                        '</div>');
                        }
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    parent.TopNotify(errorThrown, 'error');
                }
            });
        }
    });
    function BtnSaveOrUpdate() {
        if ($("#form1").form("validate")) {
            var presrc = "";
            $("#uploader").find("div.item").each(function () {
                if (presrc == "")
                    presrc = $(this).data('file');
                else
                    presrc += "," + $(this).data('file');
            });
            $("#txtArticleCover").val(presrc);
            $.ajax({
                cache: true,
                type: "POST",
                url: './ajaxsavearticle?infoid=' + _id,
                data: $('#form1').serialize().replaceAll("'", "''"),
                async: false,
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    parent.TopNotify(errorThrown, 'error');
                },
                success: function (data) {
                    if (data == "true") {

                        parent.TopNotify("保存成功", 'info');
                        if (_id == "") {
                            $("#form1").form("reset");
                            $('#thelist').html("");
                        }
                        else
                            parent.windowClose();
                    }
                }
            });
        }

    }
</script>
