<form action="/onegtd/ajaxsaveinbox" method="post" id="form1" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">标题</label>
        <div class="col-sm-2">
            <input type="text" name="BoxTitle" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">内容</label>
        <div class="col-sm-2">
            <textarea t name="BoxContent" class="form-control" rows="3"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">优先级</label>
        <div class="col-sm-2">
            <select name="Priority" class="form-control">
                <option value="none">无</option>
                <option value="low">低</option>
                <option value="middle">中</option>
                <option value="high">高</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">标签</label>
        <div class="col-sm-2">
            <input type="text" name="BoxLabel" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">信息归类</label>
        <div class="col-sm-2">
            <select name="DoType" class="form-control">
                <option value="inbox">收集箱</option>
                <option value="today">今日待办</option>
                <option value="tomorrow">明日待办</option>
            </select>
        </div>
    </div>
    <div class="text-center"><button type="submit" class="btn btn-primary">保存</button></div>


</form>

<script type="text/javascript">

    $(function () {
        if ('@Request["infoid"]' != "") {
            $.ajax({
                type: "get", dataType: "json",
                url: "/onegtd/ajaxaddinbox?rad=" + new Date().toGMTString(),
                async: true,
                data: { infoid: '@Request["infoid"]' },
                success: function (data) {
                    $("#form1").form("reset");
                    $("#form1").form("load", data);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    TopNotify(errorThrown, 'error');
                }
            });
        }

    });
</script>